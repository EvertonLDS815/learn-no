    <!-- Box Icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title><%= no.name%></title>
</head>
<body class="admin">

    <header class="admin-and-update">
        <a href="/"><i class='bx bxs-home homepage'></i></a>
    </header>
    
    <div class="container">
        <h1><%= no.name%></h1>
        <i onclick="goBack()" class='bx bx-arrow-back back-left'></i>

        <div class="content">
            <p id="parag"><%= no.description%></p>
            <div class="agrup">
                <a href="<%= no.linkImage%>" target="_blank">
                    <img src="<%= no.linkImage%>" alt="<%= no.name%>">
                </a>
            </div>
        </div>
    </div>

    <% if (no.linkVideo) { %>
        <p class="parag-video">Quer assistir o v√≠deo?? <a href="<%= no.linkVideo%>" target="_blank">Clique aqui</a></p>
    <% } %>

